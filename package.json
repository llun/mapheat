{
  "name": "mapheat",
  "version": "1.0.2",
  "description": "Create an heatmap image for overlaying on the map",
  "main": "lib/heatmap.js",
  "browser": "dist/heatmap.js",
  "browserify": {
    "transform": [
      [ "babelify", { "presets": [ "es2015" ] } ]
    ]
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "mkdir -p dist && browserify --exclude canvas --fast lib/heatmap.js -o dist/heatmap.js",
    "test": "mocha tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llun/mapheat.git"
  },
  "keywords": [
    "map",
    "heatmap",
    "image"
  ],
  "author": "Maythee Anegboonlap <null@llun.in.th>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/llun/mapheat/issues"
  },
  "homepage": "https://github.com/llun/mapheat#readme",
  "dependencies": {
    "canvas": "^1.3.4",
    "simpleheat": "llun/simpleheat#gh-pages",
    "turf": "^2.0.2"
  },
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "fs-extra": "^0.26.2",
    "mocha": "^2.3.4"
  }
}
