{
  "name": "mapheat",
  "version": "1.0.3",
  "description": "Create an heatmap image for overlaying on the map",
  "main": "lib/heatmap.js",
  "browser": {
    "mapheat": "dist/heatmap.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build": "mkdir -p dist && browserify --exclude canvas --no-builtins lib/heatmap.js -o dist/heatmap.js",
    "lint": "eslint lib/ tests/",
    "test": "jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llun/mapheat.git"
  },
  "keywords": [
    "map",
    "heatmap",
    "image"
  ],
  "author": "Maythee Anegboonlap <null@llun.in.th>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/llun/mapheat/issues"
  },
  "homepage": "https://github.com/llun/mapheat#readme",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "canvas": "^1.3.12",
    "simpleheat": "llun/simpleheat#gh-pages",
    "turf": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "fs-extra": "^0.28.0",
    "jasmine": "^2.4.1"
  }
}
